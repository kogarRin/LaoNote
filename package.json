{
  "name": "laonote",
  "version": "0.1.1",
  "description": "LaoNote编辑器",
  "author": "Kogar",
  "type": "module",
  "main": "electron/mainProcess.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "serve": "vite",
    "dist": "vite build",
    "build": "vite build && electron-builder",
    "clean": "rimraf release dist"
  },
  "build": {
    "appId": "com.kogar.laonote",
    "productName": "LaoNote编辑器",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "data/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "public/icon/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon/icon.ico"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "electron-store": "^10.1.0",
    "element-plus": "^2.10.4",
    "lodash": "^4.17.21",
    "lowdb": "^7.0.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "cross-env": "^10.0.0",
    "electron": "^37.6.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1",
    "vite": "^7.0.4"
  }
}
